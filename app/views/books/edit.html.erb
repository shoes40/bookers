  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%=form_with model: @book do |f| %>

<h4 class=title>Title</h4>
<div class=book_title><%=f.text_field:title %></div>

<h4 class=body>Body</h4>
<div class=book_body><%=f.text_area:body %></div>

<div class=book_update><%=f.submit"Update Book" %></div>

<% end %>

<td><%= link_to"show",book_path(@book.id),method: :get %></td>
