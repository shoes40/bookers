<!DOCTYPE html>
<html>
<body>
<h1>Books</h1>


<table>
 <tr>    
  <th>Title</th>
  <th>Body</th>
  <th colspan="3"></th>
  <span></span>
</tr>

<% @books.each do |book| %>
<tr> 
　<td><%= book.title %></td>
　<td><%= book.body %></td>
  <td class=book_show><%= link_to "Show",book_path(book.id),method: :get %></td>
  <td class=book_edit><%= link_to "Edit",edit_book_path(book.id) %></td>
  <td class=book_destroy><%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
</tr>
<% end %>
</table>
 

<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: Book.new do |f| %>
 <h4 class="title">Title</h4>
 <div class="book_title"><%=f.text_field:title %></div>
 
 
 <h4 class="body">Body</h4>
 <div class="book_body"><%=f.text_area:body %></div>
 
 <%=f.submit'Create Book'%>
<% end %> 
</body>
</html>